<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.PhoneRegistActivity">

    <LinearLayout
        style="@style/edit_style"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="中国+86"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_split_line"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/et_phoneNum"
            style="@style/edittext_style"
            android:hint="请输入您的手机号"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/edit_style"
        >
        <EditText
            android:id="@+id/et_password"
            style="@style/edittext_style"
            android:hint="请输入您的密码"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/edit_style"
        >
        <EditText
            android:id="@+id/et_password_again"
            style="@style/edittext_style"
            android:hint="请再次输入您的密码"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        style="@style/edit_style"
        android:layout_weight="1"
        android:layout_margin="0dp"
        >
        <EditText
            android:id="@+id/et_verify_code"
            style="@style/edittext_style"
            android:hint="请输入验证码"
            />

    </LinearLayout>
        <Button
            android:id="@+id/send_verificationCode"
            android:padding="20dp"
            android:layout_marginLeft="10dp"
            android:text="发送验证码"
            android:background="#ff8201"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/verify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60S"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/cb_read_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意"
        />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="使用条款和隐私政策"
          android:textColor="@color/textcolor"
          />
    </LinearLayout>

     <Button
         android:id="@+id/btn_register"
         android:layout_marginTop="30dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/login_registerbtn_2x"
         />

    <TextView
        android:id="@+id/to_emailRegister"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱注册"
        android:textColor="@color/textcolor"
        />

</LinearLayout>
